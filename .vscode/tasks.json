{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks":
    [
        {
            "label": "DEBUG build",
            "type": "shell",
            "command": "g++ -g *.cpp -o ${workspaceFolderBasename}.exe -Wall",
            "group":
            {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}